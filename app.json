{
  "expo": {
    "name": "WAYLO",
    "slug": "WAYLO",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "jsEngine": "jsc",
    "scheme": "waylo",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.waylo.app",
      "infoPlist": {
        "NSCameraUsageDescription": "WAYLO needs camera access to take photos and scan QR codes",
        "NSPhotoLibraryUsageDescription": "WAYLO needs photo library access to save and upload photos",
        "NSMicrophoneUsageDescription": "WAYLO needs microphone access for video recording"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.waylo.app"
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "assetBundlePatterns": ["**/*"]
  }
}
