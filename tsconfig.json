{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "jsx": "react-native",
    "module": "Node16",
    "moduleResolution": "node16",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    
    "paths": {
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@lib/*": ["lib/*"],
      "@screens/*": ["screens/*"],
      "@services/*": ["services/*"],
      "@slices/*": ["slices/*"],
      "@types/*": ["types/*"],
      "@firebase/auth": ["./node_modules/@firebase/auth/dist/index.rn.d.ts"]
    },

    "esModuleInterop": true
  },
  "extends": "expo/tsconfig.base"
}
